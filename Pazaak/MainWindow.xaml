<Window x:Class="Pazaak.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:uc="clr-namespace:Pazaak.UserControls"
        xmlns:local="clr-namespace:Pazaak"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800">

    <UniformGrid x:Name="uniformgridMain" Rows="5">
        <!--<uc:GameControl x:Name="gamecontrolGame"/>-->
        <Label x:Name="labelTitle"
               Content="Pazaak" FontSize="48"
               HorizontalAlignment="Center"
               />
        <Button x:Name="buttonQuickPlay" Click="ButtonQuickPlay_Click"
                Content="Quick Play" 
                Width="75" Height="25" HorizontalAlignment="Center" VerticalAlignment="Center"
                />
        <Button x:Name="buttonCustomDecks" Click="ButtonCustomDecks_Click"
                Content="Custom Decks Game"
                Width="75" Height="25" HorizontalAlignment="Center" VerticalAlignment="Center"
                />
    </UniformGrid>
</Window>
