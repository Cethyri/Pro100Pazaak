<UserControl x:Class="Pazaak.UserControls.PlayerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Pazaak.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="65*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="20*"/>
        </Grid.RowDefinitions>
        <local:PlayerStatusControl x:Name="playerstatusControl"
                                   Grid.Row="0"/>
        <local:BoardControl x:Name="boardControl"
                            Grid.Row="1"/>
        <local:TurnControl x:Name="turnControl"
                           Grid.Row="2"/>
        <local:HandControl x:Name="handControl"
                           Grid.Row="3"/>
    </Grid>
</UserControl>
