<UserControl x:Class="Pazaak.UserControls.PlayerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Pazaak.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
	<DockPanel>
		<local:PlayerStatusControl x:Name="pstsControl" DockPanel.Dock="Top"/>
		<local:BoardControl x:Name="brdControl" DockPanel.Dock="Top" MinHeight="100"/>
		<local:HandControl x:Name="hndControl" DockPanel.Dock="Top" MinHeight="100"/>
		<Button x:Name="button_stand" Content="Stand" Height="32" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="125" Margin="10,0,10,10" Click="button_stand_Click"/>
		<Button x:Name="button_endTurn" Content="End Turn" Height="32" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="125" Margin="10,0,10,10"/>
	</DockPanel>
</UserControl>
