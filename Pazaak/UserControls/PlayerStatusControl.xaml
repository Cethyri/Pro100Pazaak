<UserControl x:Class="Pazaak.UserControls.PlayerStatusControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Pazaak.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel 
        Background="LightGray"
        Orientation="Horizontal">
        <Label x:Name="labelName" 
               Content="{Binding Name}"/>
        <Label x:Name="labelWins"
               Content="Wins :"/>
        <Label x:Name="labelWinsValue" 
               Content="{Binding Wins}"/>
        <Label x:Name="labelBoardSum"
               Content="Board Sum : "/>
        <Label x:Name="labelBoardSumValue"
               Content="{Binding Board.Sum}"/>
    </StackPanel>
</UserControl>
