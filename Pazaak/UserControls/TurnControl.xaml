<UserControl x:Class="Pazaak.UserControls.TurnControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Pazaak.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <UniformGrid Columns="2">
            <Button Name="buttonEndTurn"
                    Content="End Turn"
                    Height="25" Width="75" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Button Name="buttonStand"
                    Content="Stand"
                    Height="25" Width="75" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </UniformGrid>
    </Grid>
</UserControl>
